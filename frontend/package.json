{
  "name": "chris-claude-site",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=10.8.2",
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.427.0",
    "@types/node": "20.3.1",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "10.4.14",
    "dompurify": "^3.0.6",
    "eslint": "8.43.0",
    "gray-matter": "^4.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "marked": "^9.1.0",
    "next": "^15.4.4",
    "postcss": "^8.4.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.11.0",
    "react-loader-spinner": "^5.4.5",
    "server-only": "0.0.1",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.3",
    "@types/react": "^18.3.23",
    "@types/react-loader-spinner": "^4.0.0",
    "eslint-config-next": "^15.4.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
